.PHONY: help install install-dev test lint format clean generate-examples run

help:
	@echo "–î–æ—Å—Ç—É–ø–Ω—ã–µ –∫–æ–º–∞–Ω–¥—ã:"
	@echo "  make install       - –£—Å—Ç–∞–Ω–æ–≤–∏—Ç—å –æ—Å–Ω–æ–≤–Ω—ã–µ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏"
	@echo "  make install-dev   - –£—Å—Ç–∞–Ω–æ–≤–∏—Ç—å –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏ –¥–ª—è —Ä–∞–∑—Ä–∞–±–æ—Ç–∫–∏"
	@echo "  make test          - –ó–∞–ø—É—Å—Ç–∏—Ç—å —Ç–µ—Å—Ç—ã"
	@echo "  make lint          - –ü—Ä–æ–≤–µ—Ä–∏—Ç—å –∫–æ–¥ –ª–∏–Ω—Ç–µ—Ä–∞–º–∏"
	@echo "  make format        - –û—Ç—Ñ–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞—Ç—å –∫–æ–¥"
	@echo "  make clean         - –û—á–∏—Å—Ç–∏—Ç—å –≤—Ä–µ–º–µ–Ω–Ω—ã–µ —Ñ–∞–π–ª—ã"
	@echo "  make generate      - –°–≥–µ–Ω–µ—Ä–∏—Ä–æ–≤–∞—Ç—å –ø—Ä–∏–º–µ—Ä—ã"
	@echo "  make run ARGS=\"sorting\" - –ó–∞–ø—É—Å—Ç–∏—Ç—å –≥–µ–Ω–µ—Ä–∞—Ç–æ—Ä"

install:
	pip install -e .

install-dev:
	pip install -e ".[dev]"
	pre-commit install

test:
	pytest tests/ -v --cov=src --cov-report=term-missing --cov-report=html

lint:
	flake8 src/ tests/
	black --check src/ tests/
	isort --check-only src/ tests/
	mypy src/

format:
	black src/ tests/
	isort src/ tests/

clean:
	rm -rf __pycache__ */__pycache__ */*/__pycache__ */*/*/__pycache__
	rm -rf .pytest_cache .coverage htmlcov .mypy_cache
	rm -rf build/ dist/ *.egg-info/
	find . -type f -name "*.pyc" -delete
	find . -type d -name "*.pyc" -delete

generate-examples:
	python -m src.main sorting -n 5 -o examples/sorting_test_cases.json
	python -m src.main searching -n 5 -o examples/searching_test_cases.json
	python -m src.main math -n 3 -o examples/math_test_cases.yaml

run:
	python -m src.main $(ARGS)

# –î–ª—è –∑–∞–ø—É—Å–∫–∞ —Å –∞—Ä–≥—É–º–µ–Ω—Ç–∞–º–∏
%:
	@:

.PHONY: check-cicd

check-cicd:
	@echo "üîß –ü—Ä–æ–≤–µ—Ä–∫–∞ CI/CD..."
	@# 1. –ü—Ä–æ–≤–µ—Ä–∫–∞ —Å—Ç—Ä—É–∫—Ç—É—Ä—ã
	@test -d src || (echo "‚ùå –ü–∞–ø–∫–∞ src –Ω–µ —Å—É—â–µ—Å—Ç–≤—É–µ—Ç" && exit 1)
	@test -d tests || (echo "‚ùå –ü–∞–ø–∫–∞ tests –Ω–µ —Å—É—â–µ—Å—Ç–≤—É–µ—Ç" && exit 1)
	@echo "‚úì –°—Ç—Ä—É–∫—Ç—É—Ä–∞ –ø—Ä–æ–µ–∫—Ç–∞ OK"
	
	@# 2. –ü—Ä–æ–≤–µ—Ä–∫–∞ –ª–∏–Ω—Ç–µ—Ä–æ–≤
	@echo "‚ñ∂ –ü—Ä–æ–≤–µ—Ä–∫–∞ –ª–∏–Ω—Ç–µ—Ä–æ–≤..."
	@flake8 src/ tests/ || exit 1
	@black --check src/ tests/ || exit 1
	@echo "‚úì –õ–∏–Ω—Ç–µ—Ä—ã OK"
	
	@# 3. –ó–∞–ø—É—Å–∫ —Ç–µ—Å—Ç–æ–≤
	@echo "‚ñ∂ –ó–∞–ø—É—Å–∫ —Ç–µ—Å—Ç–æ–≤..."
	@pytest tests/ -v --tb=short || exit 1
	@echo "‚úì –¢–µ—Å—Ç—ã OK"
	
	@# 4. –ü—Ä–æ–≤–µ—Ä–∫–∞ CLI
	@echo "‚ñ∂ –ü—Ä–æ–≤–µ—Ä–∫–∞ CLI..."
	@rm -f test_cases.json 2>/dev/null || true
	@python main.py sorting -n 1 --no-edge-cases || exit 1
	@test -f test_cases.json || (echo "‚ùå –§–∞–π–ª –Ω–µ —Å–æ–∑–¥–∞–Ω" && exit 1)
	@rm -f test_cases.json
	@echo "‚úì CLI OK"
	
	@echo "‚úÖ –í—Å–µ –ø—Ä–æ–≤–µ—Ä–∫–∏ –ø—Ä–æ–π–¥–µ–Ω—ã!"